@page
@model MoneyManager.Pages.Pages.Dashboard.IndexModel

<link rel="stylesheet" href="~/lib/css/estilo.css"/>

<style>
    .custom-container {
        background-color: #555555;
        width: 100%;
        padding: 20px;
        border-radius: 10px;
        color: #FFFFFF;
    }
    
    .info-dash {
        width: 900px;
        display: flex;
        gap: 20px; /* Espa√ßamento entre os containers */
    }
</style>

<div class="home">
    <h1>Dashboard</h1>

    <div class="info-dash">
        <div class="col-md-4">
            <div class="custom-container">
                <h3>Gasto Total</h3>
                <h4>@Model.GastoTotal.ToString("C")</h4>
            </div>
        </div>
        <div class="col-md-4">
            <div class="custom-container">
                <h3>Receita Total</h3>
                <h4>@Model.ReceitaTotal.ToString("C")</h4>
            </div>
        </div>
        <div class="col-md-4">
            <div class="custom-container">
                <h3>Saldo Total</h3>
                <h4>@Model.SaldoTotal.ToString("C")</h4>
            </div>
        </div>
    </div>
</div>
